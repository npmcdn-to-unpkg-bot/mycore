<web-fragment xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd" version="3.0" metadata-complete="true">
  <!-- **************************************************************** -->
  <!-- Servlets and mapping for the Module Broadcasting          -->
  <!-- **************************************************************** -->

  <servlet id="MCRBroadcastServlet">
    <servlet-name>MCRBroadcastingServlet</servlet-name>
    <servlet-class>org.mycore.services.broadcasting.MCRBroadcastingServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MCRBroadcastingServlet</servlet-name>
    <url-pattern>/servlets/MCRBroadcastingServlet/*</url-pattern>
  </servlet-mapping>
</web-fragment>