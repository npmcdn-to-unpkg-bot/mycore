  <url-pattern>/servlets/MCRImageServiceServlet/*</url-pattern>
</servlet-mapping>
<servlet-mapping>
  <servlet-name>MCRImageServiceServlet</servlet-name>
  <url-pattern>/getImage/*</url-pattern>
</servlet-mapping>
