<servlet id="MCRImageServiceServlet">
  <servlet-name>MCRImageServiceServlet</servlet-name>
  <servlet-class>org.mycore.services.imaging.servlet.MCRImageServiceServlet</servlet-class>
</servlet>

<servlet-mapping>
