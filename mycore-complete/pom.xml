                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-zoomify</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
