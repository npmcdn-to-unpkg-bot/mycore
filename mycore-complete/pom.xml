  <modelVersion>4.0.0</modelVersion>
  <artifactId>mycore-complete</artifactId>
  <name>MyCoRe Complete JAR package</name>
  <description>jar packaging of MyCoRe containing mycore-base and all components</description>
  <licenses>
    <license>
      <name>GPL</name>
      <url>http://www.gnu.org/licenses/gpl-2.0.txt</url>
      <comments>v2 or higher</comments>
    </license>
  </licenses>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>org.mycore.common.MCRCoreVersion</mainClass>
            </manifest>
            <manifestEntries>
              <MCR-Version>${project.version}</MCR-Version>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>process-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/classes</outputDirectory>
              <excludeTransitive>true</excludeTransitive>
              <excludes>
                LICENSE*, NOTICE*, META-INF/LICENSE*, META-INF/NOTICE*,
                license, license/**/*, test, test/**/*,
                WEB-INF/web.xml,
                WEB-INF/log4j.*,
                WEB-INF/lib, WEB-INF/lib/**/*,
                WEB-INF/classes,
                WEB-INF/classes/**/*
              </excludes>
              <artifactItems>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-base</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-acl-editor</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-broadcasting</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-buildtools</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-classbrowser</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-classhandler</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-doubletfinder</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-imaging</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-importer</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
                  <artifactId>mycore-indexing</artifactId>
                  <version>${project.version}</version>
                </artifactItem>
                <artifactItem>
                  <groupId>org.mycore</groupId>
