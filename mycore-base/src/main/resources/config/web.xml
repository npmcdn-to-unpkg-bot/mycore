  <!-- **************************************************************** -->
  <!-- Jersey -->
  <!-- **************************************************************** -->

  <servlet>
      <servlet-name>MyCoRe Jersey Resource</servlet-name>
      <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
      <init-param>
          <param-name>com.sun.jersey.config.property.resourceConfigClass</param-name>
          <param-value>org.mycore.frontend.jersey.config.MCRResourceConfig</param-value>
      </init-param>
      <init-param>
          <param-name>com.sun.jersey.config.feature.DisableXmlSecurity</param-name>
          <param-value>true</param-value>
      </init-param>
      <init-param>
           <param-name>com.sun.jersey.spi.container.ResourceFilters</param-name>
           <param-value>org.mycore.frontend.jersey.filter.MCRSecurityFilterFactory</param-value>
       </init-param>
      <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet-mapping>
      <servlet-name>MyCoRe Jersey Resource</servlet-name>
      <url-pattern>/rsc/*</url-pattern>
  </servlet-mapping>

