<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <description>Interface to IView 2 Web Services</description>
  <parent>
  <groupId>org.mycore.iview2</groupId>
  <artifactId>iview2-addons</artifactId>
    <version>2.0.94-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.mycore.iview2</groupId>
  <artifactId>remote-adapter</artifactId>
  <name>MyCoRe IView2 Remote Adapter</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxws-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>consume-wsdl</id>
            <goals>
              <goal>wsimport</goal>
            </goals>
            <configuration>
              <keep>true</keep>
              <verbose>true</verbose>
              <wsdlDirectory>${project.basedir}/../../mycore-iview2/target/jaxws/wsgen/wsdl</wsdlDirectory>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.mycore</groupId>
            <artifactId>mycore-iview2</artifactId>
            <version>${project.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <dependencies>
  </dependencies>
</project>