<?xml version="1.0" encoding="ISO_8859-1"?>
<!DOCTYPE editor>

<editor id="editor-broadcasting">
	<source uri="webapp:modules/broadcasting/config/mcr-module-broadcasting.xml" />
	<target type="webapp" name="modules/broadcasting/config/mcr-module-broadcasting.xml"/>
	<cancel url="MCRBroadcastingServlet?mode=getReceiverList"/>

	<components root="editor-broadcasting" var="/mcr-module-broadcasting">
		<panel id="editor-broadcasting" lines="on">
			<cell row="10" col="1">
				<panel id="setting" lines="on">
					<cell row="10" col="1">
						<text>
							<label xml:land="de">Power:</label>
						</text>
					</cell>
					<cell row="10" col="2" var="power">
						<list type="radio" rows="1">
							<item value="on">
								<label xml:lang="de">An</label>
							</item>
							<item value="off">
								<label xml:lang="de">Aus</label>
							</item>
						</list>
					</cell>
					
					<cell row="20" col="1">
						<text>
							<label xml:land="de">On Air Time:</label>
						</text>
					</cell>
					<cell row="20" col="2" var="onAirTime">
						<panel id="onAirTime" lines="on">
							<cell row="10" col="1" var="@send">
								<list type="radio" rows="1">
									<item value="ever">
										<label xml:lang="de">Immer</label>
									</item>
									<item value="never">
										<label xml:lang="de">Nie</label>
									</item>
								</list>
							</cell>
							
							<cell row="20" col="1" var="from">
								<text>
									<label xml:lang="de">
										<span style="margin-right:10px;">Von</span>
									</label>
								</text>
								<textfield width="30" />
							</cell>
							<cell row="20" col="2" var="to">
								<text>
									<label xml:lang="de">
										<span style="margin-left:10px; margin-right:10px;">Bis</span>
									</label>
								</text>
								<textfield width="30" />
							</cell>
						</panel>
						<space width="20px" height="10px"/>
					</cell>
					
					<cell row="30" col="1">
						<text>
							<label xml:land="de">Refresh rate:</label>
						</text>
					</cell>
					<cell row="30" col="2" var="refreshRate">
						<textfield width="10" />
						<text>
							<label xml:lang="de">Sekunde(n)</label>
						</text>
					</cell>
					
					<cell row="40" col="1">
						<text>
							<label xml:land="de">Session sensitive:</label>
						</text>
					</cell>
					<cell row="40" col="2" var="sessionSensitive">
						<list type="radio" rows="1">
							<item value="true">
								<label xml:lang="de">Ja</label>
							</item>
							<item value="false">
								<label xml:lang="de">Nein</label>
							</item>
						</list>
						<text>
							<label>
								<hr />
							</label>
						</text>
						<space width="20px" height="20px"/>
					</cell>


					<!-- ***************** MESSAGES ******************* -->
					

					<cell row="50" col="1">
						<text>
							<label xml:land="de">Message Header:</label>
						</text>
					</cell>
					<cell row="50" col="2" var="message.header">
						<textfield width="50" />
					</cell>

					<cell row="60" col="1">
						<text>
							<label xml:land="de">Message Tail:</label>
						</text>
					</cell>
					<cell row="60" col="2" var="message.tail">
						<textfield width="50" />
					</cell>

					<cell row="70" col="1">
						<text>
							<label xml:land="de">Allow guest group:</label>
						</text>
					</cell>
					<cell row="70" col="2" var="receivers/@allowGuestGroup">
						<list type="radio" rows="1">
							<item value="true">
								<label xml:lang="de">Ja</label>
							</item>
							<item value="false">
								<label xml:lang="de">Nein</label>
							</item>
						</list>
						<text>
							<label>
								<hr />
							</label>
						</text>
					</cell>
				</panel>
			</cell>
			
			<!-- ############################################################################ -->
			
			<cell row="20" col="1">
				<panel id="messages" lines="on">
					<cell row="10" col="1" var="receivers/groups" anchor="WEST">
						<repeater min="0" max="1024">
							<panel id="receiver.group">
								<cell row="10" col="1">
									<text>
										<label xml:land="de">Nachricht an Gruppe:</label>
									</text>
								</cell>
								<cell row="10" col="2" var="group">
									<repeater min="0" max="1024">
										<panel id="receiver.grouplist">
											<!-- <cell row="10" col="1">
												<textfield width="20" />
											</cell> -->
											<cell row="10" col="1">
												<list width="150" type="dropdown">
													<item value="">
														<label xml:lang="de">(bitte auswählen)</label>
														<label xml:lang="en">(choose a value)</label>
													</item>
													<include uri="request:servlets/MCRUserEditorServlet?mode=getAssignableGroupsForUser" cacheable="false" />
												</list>
											</cell>
										</panel>
									</repeater>
								</cell>
								<cell row="20" col="2" var="message.body">
									<textarea width="50" height="10" />
								</cell>
							</panel>
						</repeater>
					</cell>
					
					<cell row="20" col="1" var="receivers/users" anchor="WEST">
						<repeater min="0" max="1024">
							<panel id="receiver.user">
								<cell row="10" col="1">
									<text>
										<label xml:land="de">Nachricht an Benutzer:</label>
									</text>
								</cell>
								<cell row="10" col="2" var="user">
									<repeater min="0" max="1024">
										<panel id="receiver.userlist">
											<!-- <cell row="10" col="1">
												<textfield width="20" />
											</cell> -->
											<cell row="10" col="1">
												<list width="150" type="dropdown">
													<item value="">
														<label xml:lang="de">(bitte auswählen)</label>
														<label xml:lang="en">(choose a value)</label>
													</item>
													<include uri="request:servlets/MCRUserEditorServlet?mode=getAllUsers" cacheable="false" />
												</list>
											</cell>
										</panel>
									</repeater>
								</cell>
								<cell row="20" col="2" var="message.body">
									<textarea width="50" height="10" />
								</cell>
							</panel>
						</repeater>
					</cell>
				</panel>
			</cell>
			
			<!-- ************************** BUTTONS ************************ -->
			
			<cell row="30" col="1" anchor="CENTER">
				<space width="20px" height="30px" />
				<panel id="buttons" lines="on">
					<cell row="10" col="2">
						<submitButton width="100px">
							<label xml:lang="de">OK</label>
						</submitButton>
					</cell>
					<cell row="10" col="1">
						<cancelButton width="100px">
							<label xml:lang="de">Abbrechen</label>
						</cancelButton>
					</cell>
				</panel>
			</cell>
		</panel>
	</components>
</editor>

