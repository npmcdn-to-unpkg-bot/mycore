<mcr-module-broadcasting>
	
	<!-- on | off -->
	<power>off</power>
	
	<!-- <group/> &| <user> -->
	<!-- allowGuestGroup ("true|false") 
	=> if set to true all "gast" users are listen on the channel, if "false" only user != "gast" are listen -->
	<receivers allowGuestGroup="true">
		<groups>
			<message>Caution, root!</message>
			<group>rootgroup</group>
		</groups>
		<groups>
			<message>huhu gast!</message>
			<group>guestgroup</group>
		</groups>		
		<users>
			<message>Hello Author1A!</message>			
			<user>author1a</user>
		</users>
	</receivers>
	
	<!-- NOT SUPPORTED YET -->
	<onAirTime>
		<!-- ISO 8601-->
		<from>2006-10-20T10:17:42.920Z</from>
		<!-- ISO 8601-->		
		<to>2006-10-20T10:17:42.920Z</to>
	</onAirTime>
	
</mcr-module-broadcasting>