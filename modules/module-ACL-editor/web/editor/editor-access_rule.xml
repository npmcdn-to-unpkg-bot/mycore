<?xml version="1.0" encoding="ISO_8859-1"?>
<!DOCTYPE editor>

<editor id="ACL-Rule-editor">
	<source uri="request:servlets/MCRACLEditorServlet?mode=getRuleTable&amp;newRule={newRule}" />
	<source uri="request:servlets/MCRACLEditorServlet?mode=getRuleTable" />
	 
	<target type="servlet" name="MCRACLEditorServlet" method="post" format="xml"/>
	 <!--
	<target type="debug" method="post" format="html"/>
	-->
	<cancel url="servlets/MCRACLEditorServlet?mode=access"/>

	<components root="ACL-Rule-editor" var="/mcr_access_rule_set">
		<panel id="ACL-Rule-editor" lines="on">
			<cell row="20" col="1" var="mcr_access_rule">
				<repeater min="0" max="1024">
					<panel id="mcr.rule">
					
						<hidden var="@pos"/>
						<cell row="10" col="1" var="RID">
							<textfield width="30" />
						</cell>
						<cell row="10" col="2" var="RULE">
							<textfield width="30" />
						</cell>
						<cell row="10" col="3" var="DESCRIPTION">
							<textfield width="30" />
						</cell>
					</panel>
				</repeater>
			</cell>

			<!-- ************************** BUTTONS ************************ -->
			
			<cell row="30" col="1" anchor="CENTER">
				<space width="20px" height="30px" />
				<panel id="buttons" lines="on">
					<cell row="10" col="2">
						<submitButton width="100px">
							<label xml:lang="de">OK</label>
						</submitButton>
					</cell>
					<cell row="10" col="1">
						<cancelButton width="100px">
							<label xml:lang="de">Abbrechen</label>
						</cancelButton>
					</cell>
				</panel>
			</cell>
		</panel>
	</components>
</editor>

