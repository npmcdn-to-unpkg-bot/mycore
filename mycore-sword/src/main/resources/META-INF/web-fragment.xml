<web-fragment xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0" metadata-complete="true">
<!-- **************************************************************** -->
<!-- Servlets and mappings of mycore-sword -->
<!-- **************************************************************** -->
  <servlet>
    <servlet-name>SwordServiceDocumentServlet</servlet-name>
    <servlet-class>org.mycore.sword.MCRSWORDServiceDocumentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AtomDocumentServlet</servlet-name>
    <servlet-class>org.purl.sword.server.AtomDocumentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MCRSWORDDepositServlet</servlet-name>
    <servlet-class>org.mycore.sword.MCRSWORDDepositServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AtomDocumentServlet</servlet-name>
    <url-pattern>/servlets/AtomDocument</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SwordServiceDocumentServlet</servlet-name>
    <url-pattern>/servlets/SwordServiceDocument</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MCRSWORDDepositServlet</servlet-name>
    <url-pattern>/servlets/SwordDeposit</url-pattern>
  </servlet-mapping>
</web-fragment>