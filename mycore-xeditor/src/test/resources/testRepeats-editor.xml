<?xml version="1.0" encoding="ISO-8859-1"?>

<div xmlns:xed="http://www.mycore.de/xeditor">
  <xed:form>
    <xed:source uri="resource:{{$input}}" />
    <xed:bind xpath="/document">
      <xed:bind xpath="service">
        <xed:repeat>
          <div>
            <input type="text" />
          </div>
        </xed:repeat>
      </xed:bind>
      <xed:bind xpath="name[@type='personal']">
        <xed:repeat min="3">
          <div>
            <input type="text" />
          </div>
        </xed:repeat>
      </xed:bind>
    </xed:bind>
  </xed:form>
</div>
