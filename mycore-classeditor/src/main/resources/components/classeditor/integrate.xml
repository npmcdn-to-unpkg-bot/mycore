<project name="mods" xmlns:mcr="antlib:org.mycore.buildtools">
  <import file="../../integrate.xml" />
  <!-- - - - - - - - - - - - - - - - - - 
	          target: config                      
	         - - - - - - - - - - - - - - - - - -->
  <target name="config">
    <mcr:config action="addInclude"
                propertyfile="${build.config}/mycore.properties"
                key="MCR.URIResolver.xslIncludes.components"
                value="classificationEditorBase.xsl" />
    <mcr:config action="addInclude"
                propertyfile="${build.config}/mycore.properties"
                key="MCR.URIResolver.xslIncludes.components"
                value="classificationEditor.xsl" />
    <mcr:config action="addInclude"
                propertyfile="${build.config}/mycore.properties"
                key="MCR.URIResolver.xslIncludes.components"
                value="classificationEditorDiag.xsl" />

  	<mcr:config action="addInclude"
    			propertyfile="${build.config}/mycore.properties"
    			key="MCR.Jersey.resource.packages"
    			value="org.mycore.frontend.classeditor.resources" />
  </target>
</project>