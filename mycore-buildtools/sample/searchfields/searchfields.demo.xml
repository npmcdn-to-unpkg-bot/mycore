<?xml version="1.0" encoding="UTF-8"?>
<searchfields xmlns="http://www.mycore.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mycore.org/ searchfields.xsd">
  <!-- Search in MCRObject metadata -->
  <index id="metadata">
    <field name="identifier" objects="document disshab" robert="was here" source="objectMetadata" type="identifier" value="text()" xpath="/mycoreobject/metadata/identifiers/identifier"/>
    <field name="ddc" objects="document disshab" robert="was here" source="objectCategory" type="identifier" value="@ID" xpath="/mycoreobject/metadata/subjects/subject | /mycoreobject/metadata/ddcs/ddc"/>
    <!-- ... -->
    <field name="name" objects="mods" sortable="true" source="objectMetadata" type="name">
            <xsl:if test="/mycoreobject/metadata/def.modsContainer/modsContainer/mods:mods/mods:name">
                <mcr:name>
                    <xsl:for-each select="/mycoreobject/metadata/def.modsContainer/modsContainer/mods:mods/mods:name">
                        <xsl:for-each select="mods:namePart|mods:displayForm">
                            <xsl:value-of select="text()"/>
                            <xsl:text>    </xsl:text>
                        </xsl:for-each>
                    </xsl:for-each>
                </mcr:name>
            </xsl:if>
            
            </field>
  </index>
</searchfields>