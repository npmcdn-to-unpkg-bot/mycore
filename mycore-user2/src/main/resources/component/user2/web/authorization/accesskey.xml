<?xml version="1.0" encoding="ISO-8859-1"?>

<webpage lastModified="$Date$" id="accesskey">
  <title xml:lang="de">Zugangsschlüssel eingeben</title>
  <title xml:lang="en">Enter access key</title>

  <section>
    <editor id="editor.input.accesskey">
    
      <source uri="document:{documentID}" />
      <cancel url="{url}" />
      <cancel url="servlets/DocumentServlet?id={documentID}" />
      
      <target type="servlet" name="AccessKeyServlet" method="post" format="xml" /> 

      <validationMessage>
        <label xml:lang="de">Der eingegebene Zugangsschlüssel ist nicht korrekt.</label>
        <label xml:lang="en">The access key you entered is not correct.</label>
      </validationMessage>
      
      <components root="root" var="/document">
        <panel id="root" lines="on">
        
          <hidden var="@id" />
        
          <cell row="1" col="1" colspan="2" anchor="EAST">
            <text>
              <label xml:lang="de">Um Zugriff auf das folgende Dokument zu erhalten, geben Sie bitte - einmalig - den Zugangsschlüssel ein:</label>
              <label xml:lang="en">To get access to the following document, please enter - once-only - the access key:</label>
            </text>
          </cell>

          <cell row="2" col="1" colspan="2" anchor="WEST" var="title">
            <output />
          </cell>
          
          <cell row="3" col="1" anchor="EAST">
            <text>
              <label xml:lang="de">Zugangsschlüssel:</label>
              <label xml:lang="en">Access key:</label>
            </text>
          </cell>
          <cell row="3" col="2" anchor="WEST" var="accessKey">
            <textfield id="tf.accesskey" width="32" maxlength="64">
              <condition id="cond.accesskey.required" required="true" maxLength="64" regexp="[\S]*">
                <label xml:lang="de">Bitte geben Sie den Zugangsschlüssel für dieses Dokument ein!</label>
                <label xml:lang="en">Please enter the access key for this document</label>
              </condition>                
            </textfield>
          </cell>

          <cell row="4" col="1" colspan="2" anchor="SOUTHEAST">
            <cancelButton i18n="button.cancel" style="width: 100px;" />
            <text label=" "/>
            <submitButton i18n="button.submit" style="width: 100px;" />
          </cell>

          <condition id="cond.accesskey" class="miless.authorization.accesskeys.AccessKeyServlet" method="checkAccessKey">
            <label xml:lang="de">Der eingegebene Zugangsschlüssel ist nicht korrekt.</label>
            <label xml:lang="en">The access key you entered is not correct.</label>
          </condition>                

        </panel>
      </components>
      
    </editor>
  </section>
  
</webpage>
