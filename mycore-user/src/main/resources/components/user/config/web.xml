  <!-- **************************************************************** -->
  <!-- Servlets and mapping for the user administration module          -->
  <!-- **************************************************************** -->

  <servlet id="MCRUserAdmin">
    <servlet-name>MCRUserAdminServlet</servlet-name>
    <servlet-class>org.mycore.user.servlets.MCRUserAdminServlet</servlet-class>
  </servlet>
  <servlet id="MCRUserEditor">
    <servlet-name>MCRUserEditorServlet</servlet-name>
    <servlet-class>org.mycore.user.servlets.MCRUserEditorServlet</servlet-class>
  </servlet>
  <servlet id="MCRUserAjax">
    <servlet-name>MCRUserAjaxServlet</servlet-name>
    <servlet-class>org.mycore.user.servlets.MCRUserAjaxServlet</servlet-class>
    </servlet>
  <servlet-mapping>
    <servlet-name>MCRUserAdminServlet</servlet-name>
    <url-pattern>/servlets/MCRUserAdminServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MCRUserEditorServlet</servlet-name>
    <url-pattern>/servlets/MCRUserEditorServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MCRUserAjaxServlet</servlet-name>
    <url-pattern>/servlets/MCRUserAjaxServlet</url-pattern>
  </servlet-mapping>

<!-- **************************************************************** -->
<!-- Servlets and mappings of userlogin                               -->
<!-- **************************************************************** -->

  <servlet id="User">
    <servlet-name>MCRUserServlet</servlet-name>
    <servlet-class>org.mycore.user.servlets.MCRUserServlet</servlet-class>
  </servlet>
  <servlet id="Login">
    <servlet-name>MCRLoginServlet</servlet-name>
    <servlet-class>org.mycore.user.servlets.MCRLoginServlet</servlet-class>
  </servlet>

  <filter-mapping>
    <filter-name>UriResolverDebugFilter</filter-name>
    <servlet-name>MCRLoginServlet</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>MCRUserServlet</servlet-name>
    <url-pattern>/servlets/MCRUserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MCRLoginServlet</servlet-name>
    <url-pattern>/servlets/MCRLoginServlet</url-pattern>
  </servlet-mapping>

