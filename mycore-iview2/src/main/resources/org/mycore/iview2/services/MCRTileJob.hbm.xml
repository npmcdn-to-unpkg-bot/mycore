<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.mycore.iview2.services">
  <class name="MCRTileJob">
    <id name="id">
      <generator class="native" />
    </id>
    <natural-id>
      <property name="derivate" type="string" length="64"/>
      <property name="path" type="string" length="255"/>
    </natural-id>
    <property name="status" type="char" />
    <property name="added" type="java.util.Date" />
    <property name="start" type="java.util.Date" />
    <property name="finished" type="java.util.Date" />
    <property name="tiles" type="long" />
    <property name="width" type="long" />
    <property name="height" type="long" />
    <property name="zoomLevel" type="long" />
    <!--
    It is recommended to add the two indices manually to your database for optimal performance:
    STATUS: (status)
    STATUS_ADDED_ID: (status, added, id) 
     -->
  </class>
</hibernate-mapping>
