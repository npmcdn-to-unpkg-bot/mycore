    <field name="mods.title" objects="mods" type="text" source="objectMetadata" xpath="/mycoreobject/metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo/descendant-or-self::*" value="text()"
      addable="true" xmlns:mods="http://www.loc.gov/mods/v3"/>

    <field name="mods.gnd" objects="mods" type="identifier" source="objectMetadata" xpath="/mycoreobject/metadata/def.modsContainer/modsContainer/mods:mods//descendant-or-self::*[contains(@valueURI,'http://d-nb.info/gnd/')]" value="substring-after(@valueURI,'http://d-nb.info/gnd/')"
      addable="true" xmlns:mods="http://www.loc.gov/mods/v3"/>

    <field name="mods.name" objects="mods" type="name" source="objectMetadata" xpath="/mycoreobject/metadata/def.modsContainer/modsContainer/mods:mods//mods:name" value="mods:displayForm|mods:namePart|text()"
      addable="true" xmlns:mods="http://www.loc.gov/mods/v3"/>

    <field name="mods.author" objects="mods" addable="true" source="objectMetadata" type="name" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:mods="http://www.loc.gov/mods/v3">
      <xsl:for-each select="/mycoreobject/metadata/def.modsContainer/modsContainer/mods:mods/mods:name">
        <xsl:if test="mods:role/mods:roleTerm[@authority='marcrelator' and (@type='text' and text()='author') or (@type='code' and text()='aut')]">
          <mcr:mods.author xmlns:mcr="http://www.mycore.org/">
            <xsl:value-of select="mods:displayForm|mods:namePart|text()"/>
          </mcr:mods.author>
        </xsl:if>
      </xsl:for-each>
    </field>

    <field name="mods.genre" objects="mods" type="identifier" source="objectMetadata" xpath="/mycoreobject/metadata/def.modsContainer/modsContainer/mods:mods/mods:genre" value="text()"
