<?xml version="1.0" encoding="UTF-8"?>

<imports>
  <include uri="webapp:editor/editor-mods-common.xml" />

  <panel id="edit-mods-periodical">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:typeOfResource" descendants="true" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:genre" descendants="true" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:relatedItem" descendants="true" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />

    <!-- pub_title_orig [text] -->
    <cell row="10" col="1" anchor="EAST" ref="mods.title.label" />
    <cell row="10" col="2" anchor="WEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="10" col="3" anchor="WEST" ref="mods.title.help" />
    <!-- pub_title_orig [text] END -->

    <!-- pub_title_engl[text] -->
    <cell row="30" col="1" anchor="NORTHEAST" ref="mods.subTitle.label" />
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.subTitle" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.subTitle.help" />
    <!-- pub_title_engl[text] END -->

    <!-- pub_autor_dok_txt [text] and reviewer -->
    <cell row="40" col="1" anchor="NORTHEAST" ref="mods.author.label" />
    <cell row="40" col="2" anchor="NORTHWEST" ref="mods.author" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="40" col="3" anchor="NORTHWEST" ref="mods.author.help" />
    <!-- pub_autor_dok_txt [text] and reviewer END -->

    <!-- LANGUAGE -->
    <cell row="50" col="1" anchor="EAST" ref="mods.languageTerm.label" />
    <cell row="50" col="2" anchor="WEST" ref="mods.languageTerm" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:language" />
    <cell row="50" col="3" anchor="WEST" ref="mods.languageTerm.help" />
    <!-- LANGUAGE END -->

    <!-- Abstract -->
    <cell row="60" col="1" anchor="NORTHEAST" ref="mods.abstract.label" />
    <cell row="60" col="2" anchor="NORTHWEST" ref="mods.abstract" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="60" col="3" anchor="NORTHWEST" ref="mods.abstract.help" />
    <!-- Abstract END -->

    <!-- pub_klassifik -->
    <cell row="80" col="1" anchor="EAST" ref="mods.genre.kindOfReport.label" />
    <cell row="80" col="2" anchor="WEST" ref="mods.genre.kindOfReport" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="80" col="3" anchor="WEST" ref="mods.genre.kindOfReport.help" />
    <!-- pub_klassifik END -->

    <!-- Identifier -->
    <cell row="90" col="1" anchor="EAST" ref="mods.identifier.label" />
    <cell row="90" col="2" anchor="WEST" ref="mods.identifier" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="90" col="3" anchor="WEST" ref="mods.identifier.help" />
    <!-- Identifier END -->

    <!-- Publisher [text] -->
    <cell row="100" col="1" anchor="EAST" ref="mods.publisher.label" />
    <cell row="100" col="2" anchor="WEST" ref="mods.publisher" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="100" col="3" anchor="WEST" ref="mods.publisher.help" />
    <!-- Publisher END -->

    <!-- Datum der Veröffentlichung [text] -->
    <cell row="110" col="1" anchor="EAST" ref="mods.dateIssued.label" />
    <cell row="110" col="2" anchor="WEST" ref="mods.dateIssued" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="110" col="3" anchor="WEST" ref="mods.dateIssued.help" />
    <!-- Datum der Veröffentlichung END -->

    <!-- Datum der Erstellung [text] -->
    <cell row="120" col="1" anchor="EAST" ref="mods.dateCreated.label" />
    <cell row="120" col="2" anchor="WEST" ref="mods.dateCreated" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="120" col="3" anchor="WEST" ref="mods.dateCreated.help" />
    <!-- Datum der Erstellung END -->

    <!-- Bei Postern -> Größe [text] -->
    <cell row="130" col="1" anchor="EAST" ref="mods.physicalDescription.label" />
    <cell row="130" col="2" anchor="WEST" ref="mods.physicalDescription" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="130" col="3" anchor="WEST" ref="mods.physicalDescription.help" />
    <!-- Bei Postern -> Größe [text] END -->

    <!-- Quelle -->
    <cell row="140" col="1" anchor="EAST" ref="mods.relatedItem.label" />
    <cell row="140" col="2" anchor="WEST" ref="mods.relatedItem" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="140" col="3" anchor="WEST" ref="mods.relatedItem.help" />
    <!-- Quelle END -->

    <!-- Institution der Einreichung -->
    <cell row="150" col="1" anchor="NORTHEAST" ref="mods.submissionAtInstituteClass.label" />
    <cell row="150" col="2" anchor="NORTHWEST" ref="mods.submissionAtInstituteClass" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="150" col="3" anchor="NORTHWEST" ref="mods.submissionAtInstituteClass.help" />
    <!-- Institution END -->

    <!-- Stichworte -->
    <cell row="160" col="1" anchor="NORTHEAST" ref="mods.subject.label" />
    <cell row="160" col="2" anchor="NORTHWEST" ref="mods.subject" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="160" col="3" anchor="NORTHWEST" ref="mods.subject.help" />
    <!-- Stichworte END -->

    <!-- Kommentar -->
    <cell row="170" col="1" anchor="NORTHEAST" ref="mods.note.label" />
    <cell row="170" col="2" anchor="NORTHWEST" ref="mods.note" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="170" col="3" anchor="NORTHWEST" ref="mods.note.help" />
    <!-- Kommentar END -->

    <!-- Standort -->
    <cell row="180" col="1" anchor="EAST" ref="mods.physicalLocation.label" />
    <cell row="180" col="2" anchor="WEST" ref="mods.physicalLocation" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:location" />
    <cell row="180" col="3" anchor="WEST" ref="mods.physicalLocation.help" />
    <!-- Standort END -->

    <cell col="1" colspan="3" row="300" anchor="EAST" style="padding-top:20px;">
      <submitButton width="100px" i18n="common.button.save" />
      <cancelButton width="100px" i18n="common.button.cancel" />
    </cell>

  </panel>
</imports>
