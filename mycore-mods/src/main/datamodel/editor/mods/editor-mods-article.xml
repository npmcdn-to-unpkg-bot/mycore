<?xml version="1.0" encoding="UTF-8"?>
<import>
  <include uri="webapp:editor/editor-mods-common.xml" />

  <panel id="edit-mods-article">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:typeOfResource" default="text" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:genre[@type='intern']/@mcr:categId" default="mods_genres:article" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />
    
    <!-- Zeitschrift (Verweis auf MyCoRe-ID) -->
    <cell row="5" colspan="3" anchor="NORTHWEST" ref="displayParent" />

    <!-- pub_title_orig [text] -->
    <cell row="10" col="1" style="width:150px;" anchor="NORTHEAST" ref="mods.title.label" />
    <cell row="10" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="10" col="3" anchor="NORTHWEST" ref="mods.title.help" />
    <!-- pub_title_orig [text] END -->

    <!-- pub_title_engl[text] -->
    <cell row="20" col="1" anchor="NORTHEAST" ref="mods.title.translated.label" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.title.translated" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.title.translated.help" />
    <!-- pub_title_engl[text] END -->
    
    <!-- pub_subtitle [text] -->
    <cell row="25" col="1" anchor="NORTHEAST" ref="mods.subtitle.label" />
    <cell row="25" col="2" anchor="NORTHWEST" ref="mods.subtitle" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="25" col="3" anchor="NORTHWEST" ref="mods.subtitle.help" />
    <!-- pub_subtitle [text] END -->
    
    <!-- pub_autor_dok_txt [text] and reviewer -->
    <cell row="40" col="1" anchor="NORTHEAST" ref="mods.person.label" />
    <cell row="40" col="2" anchor="NORTHWEST" ref="mods.person" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="40" col="3" anchor="NORTHWEST" ref="mods.person.help" />
    <!-- pub_autor_dok_txt [text] and reviewer END -->

    <cell row="45" colspan="3" class="border">
      <panel style="width:100%;">
        <cell row="10" col="1" colspan="3" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:relatedItem[@type='host']/mods:part">
          <panel style="width:100%;">
            <cell row="10" col="1" style="width:140px;" var="mods:detail[@type='issue']/mods:caption" anchor="NORTHEAST">
              <textfield width="10" maxlength="512" default="Heft" />
            </cell>
            <cell row="10" col="2" var="mods:detail[@type='issue']/mods:number" anchor="NORTHWEST" ref="TFzeile10" />
            <cell row="10" col="3" anchor="NORTHEAST">
              <helpPopup id="mods.number.help" width="400px" height="250px">
                <label xml:lang="de">
                  Heftnummer
                  <br />
                  Angabe der Heft Nr., z.B.: "Heft" "12", oder "No." "12"
                </label>
                <label xml:lang="en">
                  Issue number
                  <br />
                  Give the issue number incl. a caption, e.g. "No." "12", or "Heft" "12"
                </label>
              </helpPopup>
            </cell>
            <cell row="20" col="1" anchor="NORTHEAST">
              <text>
                <label xml:lang="de">Jahrgang</label>
                <label xml:lang="en">Volume</label>
              </text>
            </cell>
            <cell row="20" col="2" colspan="2" var="mods:detail[@type='volume']/mods:number" anchor="NORTHWEST" ref="TFzeile10" />
            <cell row="30" col="1" anchor="NORTHEAST">
              <text>
                <label xml:lang="de">Jahr</label>
                <label xml:lang="en">Year</label>
              </text>
            </cell>
            <cell row="30" col="2" colspan="2" var="mods:date" anchor="NORTHWEST" id="tf.host.year">
              <textfield width="4" maxlength="4">
                <condition id="tf.host.year.cond" type="datetime" format="yyyy">
                  <label xml:lang="de">Keine gültige Jahreszahl</label>
                  <label xml:lang="en">No valid year</label>
                </condition>
              </textfield>
            </cell>
    <!-- Seiten von bis -->
            <cell row="40" col="1" anchor="NORTHEAST" ref="mods.book.pages.range.label" />
            <cell row="40" col="2" anchor="NORTHWEST" var="mods:extent[@unit='pages']">
              <panel>
                <cell col="1" anchor="WEST" var="mods:start" ref="TFzeile10" />
                <cell col="2" anchor="WEST" var="mods:end" ref="TFzeile10" />
              </panel>
            </cell>
            <cell row="40" col="3" anchor="NORTHEAST" ref="mods.book.pages.range.help" />
    <!-- Seiten von bis END -->
          </panel>
        </cell>
      
    <!-- Datum der Veröffentlichung [text] -->
        <cell row="50" col="1" anchor="NORTHEAST" ref="mods.dateIssued.label" />
        <cell row="50" col="2" anchor="NORTHWEST" ref="mods.dateIssued" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:relatedItem[@type='host']/mods:originInfo" />
        <cell row="50" col="3" anchor="NORTHWEST" ref="mods.dateIssued.help" />
    <!-- Datum der Veröffentlichung END -->

    <!-- arev_klassifik -->
        <cell row="55" col="1" anchor="NORTHEAST" ref="mods.arev.label" />
        <cell row="55" col="2" anchor="NORTHWEST" ref="mods.arev" var="metadata/def.modsContainer/modsContainer/mods:mods" />
        <cell row="55" col="3" anchor="NORTHWEST" ref="mods.arev.help" />
    <!-- arev_klassifik END -->
    
    <!-- arev_jahr -->
        <cell row="60" col="1" anchor="NORTHEAST" ref="mods.arev.year.label" />
        <cell row="60" col="2" anchor="NORTHWEST" ref="mods.arev.year" var="metadata/def.modsContainer/modsContainer/mods:mods" />
        <cell row="60" col="3" anchor="NORTHWEST" ref="mods.arev.year.help" />
    <!-- arev_jahr END -->

    <!-- Identifier -->
        <cell row="70" col="1" anchor="NORTHEAST" ref="mods.identifier.label" />
        <cell row="70" col="2" anchor="NORTHWEST" ref="mods.identifier.optional" var="metadata/def.modsContainer/modsContainer/mods:mods" />
        <cell row="70" col="3" anchor="NORTHWEST" ref="mods.identifier.help" />
    <!-- Identifier END -->
    
    <!-- LANGUAGE -->
        <cell row="80" col="1" anchor="NORTHEAST" ref="mods.languageTerm.label" />
        <cell row="80" col="2" anchor="NORTHWEST" ref="mods.languageTerm" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:language" />
        <cell row="80" col="3" anchor="NORTHWEST" ref="mods.languageTerm.help" />
    <!-- LANGUAGE END -->
    
    <!-- Abstract -->
        <cell row="90" col="1" anchor="NORTHEAST" ref="mods.abstract.label" />
        <cell row="90" col="2" anchor="NORTHWEST" ref="mods.abstract" var="metadata/def.modsContainer/modsContainer/mods:mods" />
        <cell row="90" col="3" anchor="NORTHWEST" ref="mods.abstract.help" />
    <!-- Abstract END -->
    
    <!-- pub_klassifik -->
        <cell row="100" col="1" anchor="NORTHEAST" ref="mods.ddc.label" />
        <cell row="100" col="2" anchor="NORTHWEST" ref="mods.ddc" var="metadata/def.modsContainer/modsContainer/mods:mods" />
        <cell row="100" col="3" anchor="NORTHWEST" ref="mods.ddc.help" />
    <!-- pub_klassifik END -->
    
    <!-- Quelle -->
        <cell row="110" col="1" anchor="NORTHEAST" ref="mods.relatedItem.label" />
        <cell row="110" col="2" anchor="NORTHWEST" ref="mods.relatedItem" var="metadata/def.modsContainer/modsContainer/mods:mods" />
        <cell row="110" col="3" anchor="NORTHWEST" ref="mods.relatedItem.help" />
    <!-- Quelle END -->
    
    <!-- URL -->
        <cell row="170" col="1" anchor="NORTHEAST" ref="mods.location.url.label" />
        <cell row="170" col="2" anchor="NORTHWEST" ref="mods.location.url" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:location" />
        <cell row="170" col="3" anchor="NORTHWEST" ref="mods.location.url.help" />
        <cell row="171" col="1" anchor="NORTHEAST" ref="mods.location.url.displayLabel.label" />
        <cell row="171" col="2" anchor="NORTHWEST" ref="mods.location.url.displayLabel" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:location" />
        <cell row="171" col="3" anchor="NORTHWEST" ref="mods.location.url.displayLabel.help" />
    <!-- URL END -->

    <!-- Rechte -->
        <cell row="180" col="1" anchor="NORTHEAST" ref="mods.rights.label" />
        <cell row="180" col="2" anchor="NORTHWEST" ref="mods.rights" var="metadata/def.modsContainer/modsContainer/mods:mods" />
        <cell row="180" col="3" anchor="NORTHWEST" ref="mods.rights.help" />
    <!-- Rechte END -->
    
  </panel>
</cell>

  <cell row="260" col="1" colspan="3" anchor="NORTHEAST" ref="mods.noteLocationCorp" var="metadata/def.modsContainer/modsContainer/mods:mods" />

  <cell col="1" colspan="3" row="300" anchor="EAST" style="padding-top:20px;">
    <submitButton width="100px" i18n="common.button.save" />
    <cancelButton width="100px" i18n="common.button.cancel" />
  </cell>
</panel>
</import>
