<?xml version="1.0" encoding="UTF-8"?>
<import>
  <include uri="webapp:editor/editor-mods-common.xml" />

  <panel id="edit-mods-journal">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:genre" default="journal" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />
    
    <!-- pub_title_orig [text] -->
    <cell row="10" col="1" anchor="NORTHEAST" ref="mods.title.label" />
    <cell row="10" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="10" col="3" anchor="NORTHWEST" ref="mods.title.help" />
    <!-- pub_title_orig [text] END -->

    <!-- pub_title_engl[text] -->
    <cell row="20" col="1" anchor="NORTHEAST" ref="mods.title.translated.label" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.title.translated" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.title.translated.help" />
    <!-- pub_title_engl[text] END -->

  <cell row="25" colspan="3" class="border"><panel style="width:100%;">
    <!-- impact factor -->
    <cell row="30" col="1" anchor="NORTHEAST" ref="mods.impactfactor.label" style="width:143px;"/>
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.impactfactor" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.impactfactor.help" />
    <!-- impact factor END -->

    <!-- ist referiert -->
    <cell row="40" col="1" anchor="NORTHEAST" ref="mods.referenced.label" />
    <cell row="40" col="2" anchor="NORTHWEST" ref="mods.referenced" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="40" col="3" anchor="NORTHWEST" ref="mods.referenced.help" />
    <!-- ist referiert END -->
  </panel></cell>

    <!-- Institution (wo bei BMELV-Forschung zugeordnet) -->
    <cell row="165" col="1" anchor="NORTHEAST" ref="mods.assignedInstitute.label" />
    <cell row="165" col="2" anchor="NORTHWEST" ref="mods.assignedInstitute" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="165" col="3" anchor="NORTHWEST" ref="mods.assignedInstitute.help" />
    <!-- Institution END -->

    <!-- Kommentar -->
    <cell row="170" col="1" anchor="NORTHEAST" ref="mods.note.label" />
    <cell row="170" col="2" anchor="NORTHWEST" ref="mods.note" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="170" col="3" anchor="NORTHWEST" ref="mods.note.help" />
    <!-- Kommentar END -->

    <!-- Standort -->
    <cell row="180" col="1" anchor="NORTHEAST" ref="mods.physicalLocation.label" />
    <cell row="180" col="2" anchor="NORTHWEST" ref="mods.physicalLocation" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:location" />
    <cell row="180" col="3" anchor="NORTHWEST" ref="mods.physicalLocation.help" />
    <!-- Standort END -->

    <cell col="1" colspan="3" row="300" anchor="EAST" style="padding-top:20px;">
      <submitButton width="100px" i18n="common.button.save" />
      <cancelButton width="100px" i18n="common.button.cancel" />
    </cell>
  </panel>
</import>
