<?xml version="1.0" encoding="UTF-8"?>

<imports>
  <include uri="webapp:editor/editor-mods-common.xml" />

  <panel id="edit-mods-thesis">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:typeOfResource" descendants="true" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:genre[@type='intern']" default="thesis" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />

    <!-- pub_title_orig [text] -->
    <cell row="10" col="1" anchor="NORTHEAST" ref="mods.title.label" />
    <cell row="10" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="10" col="3" anchor="NORTHWEST" ref="mods.title.help" />
    <!-- pub_title_orig [text] END -->

    <!-- pub_title_engl[text] -->
    <cell row="20" col="1" anchor="NORTHEAST" ref="mods.title.translated.label" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.title.translated" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.title.translated.help" />
    <!-- pub_title_engl[text] END -->

    <!-- pub_autor_dok_txt [text] and reviewer -->
    <cell row="30" col="1" anchor="NORTHEAST" ref="mods.person.label" />
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.person" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.person.help" />
    <!-- pub_autor_dok_txt [text] and reviewer END -->

  <cell row="40" colspan="3" class="border"><panel style="width:100%;">
    <!-- LANGUAGE -->
    <cell row="50" col="1" anchor="NORTHEAST" ref="mods.languageTerm.label" />
    <cell row="50" col="2" anchor="NORTHWEST" ref="mods.languageTerm" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:language" />
    <cell row="50" col="3" anchor="NORTHWEST" ref="mods.languageTerm.help" />
    <!-- LANGUAGE END -->

    <!-- Abstract -->
    <cell row="60" col="1" anchor="NORTHEAST" ref="mods.abstract.label" />
    <cell row="60" col="2" anchor="NORTHWEST" ref="mods.abstract" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="60" col="3" anchor="NORTHWEST" ref="mods.abstract.help" />
    <!-- Abstract END -->

    <!-- pub_klassifik -->
    <cell row="70" col="1" anchor="NORTHEAST" ref="mods.ddc.label" />
    <cell row="70" col="2" anchor="NORTHWEST" ref="mods.ddc" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="70" col="3" anchor="NORTHWEST" ref="mods.ddc.help" />
    <!-- pub_klassifik END -->

    <!-- Identifier -->
    <cell row="80" col="1" anchor="NORTHEAST" ref="mods.identifier.label" />
    <cell row="80" col="2" anchor="NORTHWEST" ref="mods.identifier" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="80" col="3" anchor="NORTHWEST" ref="mods.identifier.help" />
    <!-- Identifier END -->

    <!-- Datum der Veröffentlichung [text] -->
    <cell row="90" col="1" anchor="NORTHEAST" ref="mods.dateIssued.label" />
    <cell row="90" col="2" anchor="NORTHWEST" ref="mods.dateIssued" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="90" col="3" anchor="NORTHWEST" ref="mods.dateIssued.help" />
    <!-- Datum der Veröffentlichung END -->

    <!-- Institution der Einreichung -->
    <cell row="130" col="1" anchor="NORTHEAST" ref="mods.submissionAtInstitute.label" />
    <cell row="130" col="2" anchor="NORTHWEST" ref="mods.submissionAtInstitute" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="130" col="3" anchor="NORTHWEST" ref="mods.submissionAtInstitute.help" />
    <!-- Institution END -->

    <!-- Stichworte -->
    <cell row="160" col="1" anchor="NORTHEAST" ref="mods.subject.label" />
    <cell row="160" col="2" anchor="NORTHWEST" ref="mods.subject" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="160" col="3" anchor="NORTHWEST" ref="mods.subject.help" />
    <!-- Stichworte END -->
  </panel></cell>

    <cell row="170" col="1" colspan="3" anchor="NORTHEAST" ref="mods.noteLocationCorp" var="metadata/def.modsContainer/modsContainer/mods:mods" />

    <!-- save cancel buttons -->
    <cell col="1" colspan="3" row="250" anchor="EAST" style="padding-top:20px;">
      <submitButton width="100px" i18n="common.button.save" />
      <cancelButton width="100px" i18n="common.button.cancel" />
    </cell>
  </panel>

</imports>
