<?xml version="1.0" encoding="UTF-8"?>

<imports>
  <include uri="webapp:editor/editor-mods-common.xml" />
  <panel id="edit-mods-av-media">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:genre" default="av media" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />

    <!-- genre classification -->
    <cell row="4" col="1" anchor="NORTHEAST" ref="mods.genre.kindOfAVMedia.label" />
    <cell row="4" col="2" anchor="NORTHWEST" ref="mods.genre.kindOfAVMedia" var="metadata/def.modsContainer/modsContainer/mods:mods/" />
    <cell row="4" col="3" anchor="NORTHWEST" ref="mods.genre.kindOfAVMedia.help" />
    <!-- genre classification END -->

    <!-- TITLE -->
    <cell row="7" col="1" anchor="NORTHEAST" ref="mods.title.label" />
    <cell row="7" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="7" col="3" anchor="NORTHWEST" ref="mods.title.help" />
    <!-- TITLE END -->

    <!-- LANGUAGE -->
    <cell row="10" col="1" anchor="NORTHEAST" ref="mods.languageTerm.label" />
    <cell row="10" col="2" anchor="NORTHWEST" ref="mods.languageTerm" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:language" />
    <cell row="10" col="3" anchor="NORTHWEST" ref="mods.languageTerm.help" />
    <!-- LANGUAGE END -->

    <!-- Author -->
    <cell row="20" col="1" anchor="NORTHEAST" ref="mods.author.label" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.author" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.author.help" />
    <!-- Author END -->

    <!-- Publisher [text] -->
    <cell row="30" col="1" anchor="NORTHEAST" ref="mods.publisher.label" />
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.publisher" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.publisher.help" />
    <!-- Publisher END -->

    <!-- Datum der Veröffentlichung [text] -->
    <cell row="40" col="1" anchor="NORTHEAST" ref="mods.dateIssued.label" />
    <cell row="40" col="2" anchor="NORTHWEST" ref="mods.dateIssued" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:originInfo" />
    <cell row="40" col="3" anchor="NORTHWEST" ref="mods.dateIssued.help" />
    <!-- Datum der Veröffentlichung END -->

    <!-- Abstract -->
    <cell row="50" col="1" anchor="NORTHEAST" ref="mods.abstract.label" />
    <cell row="50" col="2" anchor="NORTHWEST" ref="mods.abstract" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="50" col="3" anchor="NORTHWEST" ref="mods.abstract.help" />
    <!-- Abstract END -->

    <!-- Stichworte -->
    <cell row="60" col="1" anchor="NORTHEAST" ref="mods.subject.label" />
    <cell row="60" col="2" anchor="NORTHWEST" ref="mods.subject" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="60" col="3" anchor="NORTHWEST" ref="mods.subject.help" />
    <!-- Stichworte END -->

    <!-- Quelle -->
    <cell row="62" col="1" anchor="NORTHEAST" ref="mods.relatedItem.label" />
    <cell row="62" col="2" anchor="NORTHWEST" ref="mods.relatedItem" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="62" col="3" anchor="NORTHWEST" ref="mods.relatedItem.help" />
    <!-- Quelle END -->

    <cell row="100" col="1" colspan="3" anchor="NORTHEAST" ref="mods.noteLocationCorp" var="metadata/def.modsContainer/modsContainer/mods:mods" />

    <cell col="1" colspan="3" row="150" anchor="NORTHEAST" style="padding-top:20px;">
      <submitButton width="100px" i18n="common.button.save" />
      <cancelButton width="100px" i18n="common.button.cancel" />
    </cell>
  </panel>
</imports>
