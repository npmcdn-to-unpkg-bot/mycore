<?xml version="1.0" encoding="UTF-8"?>

<imports>
  <include uri="webapp:editor/editor-mods-common.xml" />
  <panel id="edit-mods-cpublication">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:genre[@type='intern']/@mcr:categId" default="mods_genres:confpub" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />

    <!-- Konferenzband-Verweis (Verweis auf MyCoRe-ID) -->
    <cell row="10" colspan="3" anchor="NORTHWEST" ref="displayParent" />

    <!-- Konferenzband-Verweis END -->


  <cell row="20" colspan="3" class="border"><panel style="width:100%;">
    <!-- TITLE -->
    <cell row="10" col="1" anchor="NORTHEAST" class="mandatory" ref="mods.title.label" />
    <cell row="10" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="10" col="3" anchor="NORTHWEST" ref="mods.title.help" />
    <!-- TITLE END -->

    <!-- pub_title_engl[text] -->
    <cell row="20" col="1" anchor="NORTHEAST" ref="mods.title.translated.label" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.title.translated" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.title.translated.help" />
    <!-- pub_title_engl[text] END -->
    
    <!-- pub_subtitle [text] -->
    <cell row="25" col="1" anchor="NORTHEAST" ref="mods.subtitle.label" />
    <cell row="25" col="2" anchor="NORTHWEST" ref="mods.subtitle" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="25" col="3" anchor="NORTHWEST" ref="mods.subtitle.help" />
    <!-- pub_subtitle [text] END -->
    
    <!-- pub_autor_dok_txt [text] and reviewer -->
    <cell row="30" col="1" class="mandatory" anchor="NORTHEAST" ref="mods.person.label" />
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.person" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.person.help" />
    <!-- pub_autor_dok_txt [text] and reviewer END -->
    
    <!-- pub_genre -->
    <cell row="32" col="1" anchor="NORTHEAST" class="mandatory" ref="mods.genre.kindOfReport.label" />
    <cell row="32" col="2" anchor="NORTHWEST" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:genre">
      <panel>
        <hidden var="@type" default="kindof" />
        <hidden var="@displayLabel" default="Kind of Publication" />
        <cell var="@mcr:categId">
          <list width="30" type="dropdown" id="mods.genre.kindOfPublication.list">
            <include ref="pleaseSelect" />
            <include uri="classification:editorComplete:-1:children:mods_genres:confpub" cacheable="false" />
            <condition id="mods.genre.kindOfPublication.cond" required="true">
              <label xml:lang="de">Bitte wählen Sie einen Wert aus!</label>
              <label xml:lang="en">Please select one entry!</label>
            </condition>
          </list>
        </cell>
      </panel>
    </cell>
    <cell row="32" col="3" anchor="NORTHEAST">
      <helpPopup id="mods.genre.kindOfPublication.help" width="400px" height="250px">
        <label xml:lang="de">Eine Zuordnung zu einem in der Liste verfügbaren Genre .</label>
        <label xml:lang="en">Entry from the list.</label>
      </helpPopup>
    </cell>
  <!-- pub_genre END -->
  <!--  Seitenzahlen bei  -->
    <cell row="35" col="1" anchor="NORTHEAST" ref="mods.book.pages.range.label" />
    <cell row="35" col="2" anchor="NORTHWEST" ref="mods.book.pages.range" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="35" col="3" anchor="NORTHWEST" ref="mods.book.pages.range.help" />
  <!--  Ende Seitenzahlen -->
  <!-- Bei Postern -> Größe [text] -->
    <cell row="36" col="1" anchor="NORTHEAST" ref="mods.physicalDescription.label" />
    <cell row="36" col="2" anchor="NORTHWEST" ref="mods.physicalDescription" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="36" col="3" anchor="NORTHWEST" ref="mods.physicalDescription.help" />
    <!-- Bei Postern -> Größe [text] END -->

  <!-- arev_klassifik -->
    <cell row="37" col="1" anchor="NORTHEAST" ref="mods.arev.label" />
    <cell row="37" col="2" anchor="NORTHWEST" ref="mods.arev" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="37" col="3" anchor="NORTHWEST" ref="mods.arev.help" />
    <!-- arev_klassifik END -->
    
    <!-- arev_jahr -->
    <cell row="38" col="1" anchor="NORTHEAST" ref="mods.arev.year.label" />
    <cell row="38" col="2" anchor="NORTHWEST" ref="mods.arev.year" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="38" col="3" anchor="NORTHWEST" ref="mods.arev.year.help" />
    <!-- arev_jahr END -->

    <!-- Identifier -->
    <cell row="40" col="1" anchor="NORTHEAST" ref="mods.identifier.label" />
    <cell row="40" col="2" anchor="NORTHWEST" ref="mods.identifier.optional" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="40" col="3" anchor="NORTHWEST" ref="mods.identifier.help" />
    <!-- Identifier END -->

    <!-- Stichworte -->
    <cell row="50" col="1" anchor="NORTHEAST" ref="mods.subject.label" />
    <cell row="50" col="2" anchor="NORTHWEST" ref="mods.subject" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="50" col="3" anchor="NORTHWEST" ref="mods.subject.help" />
    <!-- Stichworte END -->

    <!-- URL -->
    <cell row="70" col="1" anchor="NORTHEAST" ref="mods.location.url.label" />
    <cell row="70" col="2" anchor="NORTHWEST" ref="mods.location.url" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:location" />
    <cell row="70" col="3" anchor="NORTHWEST" ref="mods.location.url.help" />
    <cell row="71" col="1" anchor="NORTHEAST" ref="mods.location.url.displayLabel.label" />
    <cell row="71" col="2" anchor="NORTHWEST" ref="mods.location.url.displayLabel" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:location" />
    <cell row="71" col="3" anchor="NORTHWEST" ref="mods.location.url.displayLabel.help" />
    <!-- URL END -->

    <!-- Rechte -->
    <cell row="80" col="1" anchor="NORTHEAST" ref="mods.rights.label" />
    <cell row="80" col="2" anchor="NORTHWEST" ref="mods.rights" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="80" col="3" anchor="NORTHWEST" ref="mods.rights.help" />
    <!-- Rechte END -->
  </panel></cell>

    <cell row="100" col="1" colspan="3" anchor="NORTHWEST" ref="mods.noteLocationCorp" var="metadata/def.modsContainer/modsContainer/mods:mods" />

    <cell col="1" colspan="3" row="150" anchor="NORTHEAST" style="padding-top:20px;">
      <submitButton width="100px" i18n="common.button.save" />
      <cancelButton width="100px" i18n="common.button.cancel" />
    </cell>
  </panel>
</imports>
