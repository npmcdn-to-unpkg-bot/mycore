          <label xml:lang="en">Enter publisher here.</label>
        </condition>
      </panel>
    </cell>
  </panel>

  <helpPopup id="mods.publisher.help" width="400px" height="250px">
    <label xml:lang="de">
      Publisher (Druckerei, Medienanstalt ...)
        </label>
    <label xml:lang="en">
      Publisher
        </label>
  </helpPopup>
  <!-- Publisher END -->

  <!-- Institution der Einreichung -->
  <text id="mods.submissionAtInstituteClass.label">
    <label xml:lang="de">Institution (*)</label>
    <label xml:lang="en">Institution (*)</label>
  </text>

  <panel id="mods.submissionAtInstituteClass">
