<?xml version="1.0" encoding="UTF-8"?>

<import>
  <include uri="webapp:editor/editor-mods-common.xml" />

  <panel id="edit-mods-book-chapter">
    <hidden var="@ID" />
    <hidden var="@label" />
    <hidden var="@version" />
    <hidden var="service" descendants="true" />
    <hidden var="metadata/@xml:lang" default="de" />

    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/@ID" />
    <hidden var="metadata/def.modsContainer/@class" default="MCRMetaXML" />
    <hidden var="metadata/def.modsContainer/modsContainer/mods:mods/mods:genre" default="book chapter" />
    <hidden var="metadata/def.modsContainer/@notinherit" default="true" />
    <hidden var="metadata/def.modsContainer/@heritable" default="false" />

    <!-- Title related Item -->
    <cell row="1" col="1" anchor="NORTHEAST" ref="mods.related.title.label" />
    <cell row="1" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:relatedItem/mods:titleInfo" />
    <cell row="1" col="3" anchor="NORTHWEST" ref="mods.title.help" />
    <!-- Title END -->

    <!-- Seiten von bis -->
    <cell row="10" col="1" anchor="NORTHEAST" ref="mods.book.pages.range.label" />
    <cell row="10" col="2" anchor="NORTHWEST" ref="mods.book.pages.range" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:relatedItem[@type='host']" />
    <cell row="10" col="3" anchor="NORTHWEST" ref="mods.book.pages.range.help" />
    <!-- Seiten von bis END -->

    <!-- Identifier -->
    <cell row="15" col="1" anchor="NORTHEAST" ref="mods.identifier.label" />
    <cell row="15" col="2" anchor="NORTHWEST" ref="mods.identifier" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="15" col="3" anchor="NORTHWEST" ref="mods.identifier.help" />
    <!-- Identifier END -->

    <!-- Title -->
    <cell row="20" col="1" anchor="NORTHEAST" ref="mods.title.label" />
    <cell row="20" col="2" anchor="NORTHWEST" ref="mods.title" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:titleInfo" />
    <cell row="20" col="3" anchor="NORTHWEST" ref="mods.title.help" />
    <!-- Title END -->

    <!-- Author -->
    <cell row="30" col="1" anchor="NORTHEAST" ref="mods.author.label" />
    <cell row="30" col="2" anchor="NORTHWEST" ref="mods.author" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="30" col="3" anchor="NORTHWEST" ref="mods.author.help" />
    <!-- Author END -->

  <cell row="35" colspan="3" class="border"><panel style="width:100%;">
    <!-- LANGUAGE -->
    <cell row="40" col="1" anchor="NORTHEAST" ref="mods.languageTerm.label" />
    <cell row="40" col="2" anchor="NORTHWEST" ref="mods.languageTerm" var="metadata/def.modsContainer/modsContainer/mods:mods/mods:language" />
    <cell row="40" col="3" anchor="NORTHWEST" ref="mods.languageTerm.help" />
    <!-- LANGUAGE END -->

    <!-- Abstract -->
    <cell row="60" col="1" anchor="NORTHEAST" ref="mods.abstract.label" />
    <cell row="60" col="2" anchor="NORTHWEST" ref="mods.abstract" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="60" col="3" anchor="NORTHWEST" ref="mods.abstract.help" />
    <!-- Abstract END -->

    <!-- pub_klassifik -->
    <cell row="80" col="1" anchor="NORTHEAST" ref="mods.ddc.label" />
    <cell row="80" col="2" anchor="NORTHWEST" ref="mods.ddc" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="80" col="3" anchor="NORTHWEST" ref="mods.ddc.help" />
    <!-- pub_klassifik END -->

    <!-- Quelle -->
    <cell row="100" col="1" anchor="NORTHEAST" ref="mods.relatedItem.label" />
    <cell row="100" col="2" anchor="NORTHWEST" ref="mods.relatedItem" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="100" col="3" anchor="NORTHWEST" ref="mods.relatedItem.help" />
    <!-- Quelle END -->

    <!-- Stichworte -->
    <cell row="120" col="1" anchor="NORTHEAST" ref="mods.subject.label" />
    <cell row="120" col="2" anchor="NORTHWEST" ref="mods.subject" var="metadata/def.modsContainer/modsContainer/mods:mods" />
    <cell row="120" col="3" anchor="NORTHWEST" ref="mods.subject.help" />
    <!-- Stichworte END -->
  </panel></cell>

    <cell row="260" col="1" colspan="3" anchor="NORTHEAST" ref="mods.noteLocationCorp"/>

    <!-- save/cancel buttons -->
    <cell col="1" colspan="3" row="300" anchor="EAST" style="padding-top:20px;">
      <submitButton width="100px" i18n="common.button.save" />
      <cancelButton width="100px" i18n="common.button.cancel" />
    </cell>

  </panel>
</import>