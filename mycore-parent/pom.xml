  <distributionManagement>
    <!-- use the following if you're not using a snapshot version. -->
    <repository>
      <id>MyCoRe HQ</id>
      <name>MyCoRe Headquarters</name>
      <url>scp://server.mycore.de/mcr/mycore.de/maven2</url>
    </repository>
