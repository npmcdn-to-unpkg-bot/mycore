  <build>
    <pluginManagement>
      <plugins>
        <!-- Use Java 1.5 everywhere -->
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <target>${java.target.version}</target>
            <source>${java.target.version}</source>
          </configuration>
        </plugin>
        <!-- Generate aggregate Javadocs -->
        <plugin>
          <artifactId>maven-javadoc-plugin</artifactId>
          <configuration>
            <source>${java.target.version}</source>
            <aggregate>true</aggregate>
            <groups>
              <group>
                <title>MyCoRe Datamodel</title>
                <packages>org.mycore.datamodel*</packages>
              </group>
              <group>
                <title>MyCoRe Persistence Backend Implementations</title>
                <packages>org.mycore.backend*</packages>
              </group>
              <group>
                <title>MyCoRe User Interface Frontend</title>
                <packages>org.mycore.frontend*</packages>
              </group>
              <group>
                <title>MyCoRe Common Functionality</title>
                <packages>org.mycore.common*</packages>
              </group>
              <group>
                <title>MyCoRe Services</title>
                <packages>org.mycore.services*</packages>
              </group>
              <group>
                <title>MyCoRe User and Group Management</title>
                <packages>org.mycore.user*</packages>
              </group>
            </groups>
            <tags>
              <tag>
                <name>hibernate.property</name>
                <placement>X</placement>
              </tag>
            </tags>
            <links>
              <link>http://java.sun.com/j2se/1.5.0/docs/api/</link>
              <link>http://tomcat.apache.org/tomcat-5.5-doc/servletapi/</link>
              <link>http://java.sun.com/xml/jaxp/dist/1.1/docs/api/</link>
              <link>http://www.jdom.org/docs/apidocs</link>
              <link>http://logging.apache.org/log4j/docs/api/</link>
              <link>http://jakarta.apache.org/lucene/docs/api/</link>
              <link>http://www.hibernate.org/hib_docs/v3/api/</link>
              <link>http://lucene.apache.org/java/2_4_1/api/</link>
            </links>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <!-- JCR-988: IDE plugins -->
      <plugin>
        <!-- http://maven.apache.org/plugins/maven-idea-plugin/ -->
        <artifactId>maven-idea-plugin</artifactId>
        <configuration>
          <downloadSources>true</downloadSources>
          <jdkLevel>${java.target.version}</jdkLevel>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
