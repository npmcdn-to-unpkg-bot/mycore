<document xmlns="http://maven.apache.org/changes/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
  <properties>
    <title>MyCoRe Changes Report</title>
    <author email="thomas.scheffler(at)uni-jena.de">Thomas Scheffler</author>
  </properties>
  <body>
    <release version="2013.07" date="2013-07-XX" description="July developer release 2013">
      <action dev="mcrkrebs" type="fix">
        mycore-mods: fixed typo in solr field for identifier
      </action>
      <action dev="mcrsherm" type="update">
        MCRISO8601Date: omit the '-' when the era designator is present in the format value (B.C.)
      </action>
      <action dev="mcrtchef" type="remove">
        removed mycore-doubletfinder and mycore-importer components
      </action>
      <action dev="mcrtchef" type="remove">
        removed dom4j dependency
      </action>
      <action dev="mcrtchef" type="update">
        CLI command "init hibernate" is required to update database schema
      </action>
      <action dev="mcrtchef" type="update">
        update to hibernate 4.2.2 (prevents usage of hsqldb 1.8.x)
      </action>
      <action dev="mcrtchef" type="update">
        moved content of jar internal web folder to META-INF/resources as defined by Servlet 3.0 standard.
      </action>
      <action dev="mcrtchef" type="update">
        use web-fragment.xml as defined by Servlet 3.0 standard.
        <fixes issue="226" />
      </action>
      <action dev="mcrtchef" type="update">
        updated dependencies
      </action>
    </release>
    <release version="2013.06" date="2013-06-20" description="2013 LTS" />
  </body>
</document>
